<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"

    android:background="@drawable/redishblue">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="8dp">

        <!-- Title -->
        <TextView
            android:id="@+id/infoTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Disaster Alert Levels"
            android:textStyle="bold"
            android:textSize="24sp"
            android:textColor="@android:color/black"
            android:layout_gravity="center_horizontal"
            android:paddingBottom="16dp"/>

        <!-- Level 1 Card -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:elevation="4dp"
            android:padding="8dp"
            android:backgroundTint="@color/green">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/level1Title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Level 1 - Minor Alert"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:textColor="@android:color/white"/>

                <TextView
                    android:id="@+id/level1Description"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Green color indicates minimal threat. Be aware, but no immediate action is required."
                    android:textColor="@android:color/white"
                    android:paddingTop="4dp"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Level 2 Card -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:elevation="4dp"
            android:padding="8dp"
            android:backgroundTint="@color/yellow">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/level2Title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Level 2 - Moderate Alert"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:textColor="@android:color/black"/>

                <TextView
                    android:id="@+id/level2Description"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Yellow color indicates caution. Monitor the situation and be prepared to take action."
                    android:textColor="@android:color/black"
                    android:paddingTop="4dp"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Level 3 Card -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:elevation="4dp"
            android:padding="8dp"
            android:backgroundTint="@color/orange">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/level3Title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Level 3 - Severe Alert"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:textColor="@android:color/white"/>

                <TextView
                    android:id="@+id/level3Description"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Orange color indicates a high risk. Take action to protect yourself."
                    android:textColor="@android:color/white"
                    android:paddingTop="4dp"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Level 4 Card -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:elevation="4dp"
            android:padding="8dp"
            android:backgroundTint="@color/red">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/level4Title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Level 4 - Critical Alert"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:textColor="@android:color/white"/>

                <TextView
                    android:id="@+id/level4Description"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Red color indicates extreme danger. Immediate action is required."
                    android:textColor="@android:color/white"
                    android:paddingTop="4dp"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

    </LinearLayout>

</ScrollView>
